#!/usr/bin/env ruby
require "rails"
require 'rubygems'
require 'barby'
require 'barby/barcode/code_128'
require 'barby/outputter/rmagick_outputter'
require 'rqrcode'
#require  "person_service"

if ARGV.length > 1

  #(1..10).each{|i| `bin/generate_barcode #{"%08d" % i} barcode#{i} tmp/`}
  # 0 Content
  # 1 filename
  # 2 directory_name

  require 'barby'
  require 'barby/barcode'
  require 'barby/barcode/qr_code'
  require 'barby/outputter/png_outputter'

   data = PersonService.qr_code_data(ARGV[0])

   barcode = Barby::QrCode.new(data, level: :q, size: 15) # Barby::Code128B.new(ARGV[0])

  file = File.open("#{ARGV[1]}/QR#{ARGV[0]}.png", "wb")
	
  file.write barcode.to_png(:height => 50, :xdim => 2)

  file.close
else 

